<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.tonyshkurenko.toolbarsetup">

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity android:name=".MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".HidingToolbarActivity"
        android:label="@string/title_activity_hiding_toolbar"
        android:parentActivityName=".MainActivity"
        android:theme="@style/AppTheme.NoActionBar">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="io.github.tonyshkurenko.toolbarsetup.MainActivity"/>
    </activity>
    <activity
        android:name=".CollapsingToolbarActivity"
        android:label="@string/title_activity_collapsing_toolbar"
        android:parentActivityName=".MainActivity"
        android:theme="@style/AppTheme.NoActionBar">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="io.github.tonyshkurenko.toolbarsetup.MainActivity"/>
    </activity>
    <activity
        android:name=".CollapsingHidingToolbarActivity"
        android:label="@string/title_activity_collapsing_hiding_toolbar"
        android:parentActivityName=".MainActivity"
        android:theme="@style/AppTheme.NoActionBar">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="io.github.tonyshkurenko.toolbarsetup.MainActivity"/>
    </activity>
    <activity
        android:name=".TabToolbarActivity"
        android:label="@string/title_activity_tab_toolbar"
        android:parentActivityName=".MainActivity"
        android:theme="@style/AppTheme.NoActionBar">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="io.github.tonyshkurenko.toolbarsetup.MainActivity"/>
    </activity>
  </application>

</manifest>